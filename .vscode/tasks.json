{
    "tasks": [
        {
            "label": "make build",
            "command": "make",
            "args": [
                "build",
                "curFile=${fileDirname}/${fileBasenameNoExtension}"
            ],
            "type": "process",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make qemu-static",
            "command": "make",
            "args": [
                "qemu-gdb",
                "curFile=main"
            ],
            "type": "process",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "make qemu-static-active",
            "command": "make",
            "args": [
                "qemu-gdb",
                "curFile=${fileDirname}/${fileBasenameNoExtension}"
            ],
            "type": "process",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "qemu-static-main",
            "dependsOrder": "sequence",
            "dependsOn": [
                "make build",
                "make qemu-static"
            ]
        },
        {
            "label": "qemu-static-active",
            "dependsOrder": "sequence",
            "dependsOn": [
                "make build",
                "make qemu-static-active"
            ]
        },
        {
            "label": "make clean",
            "command": "make",
            "args": [
                "clean",
                "curFile=${fileDirname}/${fileBasenameNoExtension}"
            ],
            "type": "process"
        }
    ],
    "version": "2.0.0"
}